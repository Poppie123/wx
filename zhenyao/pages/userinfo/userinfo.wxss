/* 客服按钮处理 */
.kefu-btn{
  width: 100%;
  background: #fff;
  border: 0;
  padding: 0;
  line-height: normal;
}
.kefu-btn::after{
  width: 100%;
  border: 0;
}

button {
  position:relative;
  display:block;
  margin-left:auto;
  margin-right:auto;
  padding-left:0;
  padding-right:0;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  line-height: normal;
  text-decoration:none;
  border-radius:5px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#fff;
  background-color:transparent;
}
button::after {
  border: none;
}
.button-hover{
  color: #fff;
  background-color: transparent;
}