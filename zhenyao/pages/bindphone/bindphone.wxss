/* pages/bindphone/bindphone.wxss */
page{
  height: 100%;
  background-color: #f5f5f5;
}
view{
  box-sizing: border-box;
}
.page-box{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  padding: 0 20rpx 30rpx;
  background: #fff;
}
.page-box .phone{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #eee;
}
.page-box input{
  font-size: 32rpx;
}
.page-box .code{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #eee;
}
.page-box .code input{
  width: 50%;
}
.page-box .code .getcode{
  width: auto;
  height: 60rpx;
  background-color: #8773DF;
  text-align: center;
  line-height:60rpx;
  font-size: 28rpx;
  color: #fff;
  padding: 0 10rpx;
  border-radius: 10rpx;
}
.page-box button{
  width: 100%;
  height: 80rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  background: #8773DF;
}