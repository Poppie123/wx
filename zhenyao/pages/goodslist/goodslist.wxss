/* pages/goodslist/goodslist.wxss */
.main{
  margin-top: 0;
}
.ul-tab{
  padding: 24rpx 80rpx;
  background:rgba(255,255,255,1);
box-shadow:0px 1px 16px 0px rgba(22,3,106,0.09);

}
.ul-tab view{
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}
.ul-tab view text.icon{
  color: #AAAAAA;
  font-size: 16rpx;
  display: block;
  line-height: 16rpx;
  font-weight: bold;
}
.ul-tab view.active{
  color: #8773DF;
}
.ul-tab view.active view text.active{
  color: #8773DF;
}
.ul-tab view view{
  margin: 0 4rpx;
}
.s-list{
    margin-top: 20rpx;
}
.l-img{
  width: 338rpx;
  height: 338rpx;
  border-radius: 8rpx;
}
.l-img image{
  width: 338rpx;
  height: 338rpx;
}
.l-bot{
  width: 338rpx;
  padding: 10rpx;
}
.l-bot view{
  font-size: 32rpx;
  line-height: 42rpx;
  color: #333333;
  padding-top: 4rpx;
  font-weight: normal;
  margin: 16rpx 0 10rpx 0;
}
.l-bot view{
  color: #999999;
  font-size: 24rpx;
}
.l-bot view:nth-child(2){
  margin:20rpx 0 10rpx 0;
}
.l-bot view text:nth-child(1){
  font-size: 36rpx;
  color: #E59905;
  font-weight: bold;
}
.l-bot view text:nth-child(2){
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.list:nth-child(2n+1){
  float: left;
  margin-left: 8rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid #F3F3F3;
}
.list:nth-child(2n){
  float: right;
  margin-right: 8rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid #F3F3F3;
}
.dazhe{
  font-size: 20rpx;
  color: #E59905;
  padding: 0 10rpx;
  border: 2rpx solid #E59905;
  border-top-left-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
  margin-left: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.pin{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: #8773DF;
  border-radius:4rpx;
  color: #fff;
  font-size: 20rpx;
  display: inline-block;
  text-align: center;
  margin-right: 10rpx;
  font-weight: normal;
}
.s-list {
  margin-top: 0;
  padding-top: 20rpx;
}